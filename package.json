{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "word-companion",
  "title": "Word Companion",
  "description": "Makes Microsoft Word features available in Raycast",
  "icon": "command-icon-word.png",
  "author": "peberstaller",
  "license": "MIT",
  "commands": [
    {
      "name": "align-center",
      "title": "Align Center",
      "subtitle": "Microsoft Word",
      "description": "Aligns text to the center",
      "mode": "no-view"
    },
    {
      "name": "align-right",
      "title": "Align Right",
      "subtitle": "Microsoft Word",
      "description": "Aligns Text to the right",
      "mode": "no-view"
    },
    {
      "name": "align-left",
      "title": "Align Left",
      "subtitle": "Microsoft Word",
      "description": "Aligns Text to the left",
      "mode": "no-view"
    },
    {
      "name": "align-justify",
      "title": "Align Justify",
      "subtitle": "Microsoft Word",
      "description": "Justifies selected text",
      "mode": "no-view"
    },
    {
      "name": "insert-footnote",
      "title": "Insert Footnote",
      "subtitle": "Microsoft Word",
      "description": "Inserts a footnote at current position",
      "mode": "no-view"
    },
    {
      "name": "insert-table",
      "title": "Insert Table",
      "subtitle": "Microsoft Word",
      "description": "Inserts a table at current position",
      "mode": "no-view",
      "arguments": [
        {
          "name": "columns",
          "placeholder": "Columns",
          "type": "text",
          "required": true
        },
        {
          "name": "rows",
          "placeholder": "Rows",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.40.3",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "16.10.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
